<%= form_with model: @post, local: true do |form| %>
  <div>
     <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div>
    <!-- ***** "送信"を button_value に変更 ***** -->
    <%= form.submit button_value %>
  </div>
<% end %>